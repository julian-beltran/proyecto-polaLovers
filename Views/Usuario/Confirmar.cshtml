@model APPAdminGroup.Models.Usuario
@{
    ViewBag.Title = "Confirmar";
   
}








<div class="right_col">
    <div class="container2">


        <div class="row">

            <div class="col-md-12 col-sm-12 ">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>RECUPERAR CONTRASEÑA </h2>

                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">


                        <!-- Smart Wizard -->

                        <div id="step-1">
                            @using (Html.BeginForm("Confirmar", "Usuario", FormMethod.Post))
                            {


                                <div class="form-group row">
                                    <label class=" col-md-3 col-sm-3">
                                        @ViewBag.Error
                                    </label>
                                    <div class="col-md-5 col-sm-5 ">
                                        @ViewBag.Message

                                        @Html.HiddenFor(d => d.tokenCorreo)

                                    </div>
                                    <div class="col-md-2 col-sm-2 ">

                                        <button type="submit" class="btn btn-info">Continuar</button>
                                    </div>





                                </div>



                            }

                        </div>

                    </div>

                </div>
            </div>
            <div class="col-md-2 col-sm-2 ">

                <a class="btn btn-info" href="https://localhost:44327/Usuario/Index">Volver</a>
            </div>
        </div>
    </div>
</div>


<style>
    .container2 {
        width: 100%;
        padding: 190px;
        max-width: 100%;
        min-height: 100vh;
    }
</style>