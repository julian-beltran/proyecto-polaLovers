@model APPAdminGroup.Models.personaEditPerfilViewModel
@{
    ViewBag.Title = "Edit";

}

<div class="">
    <div class="page-title">
        <div class="title_left">
            <h3>Editar Mi Perfil</h3>
        </div>
    </div>
    <div class="clearfix"></div>

    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Configurar Cuenta <small>formulario</small></h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" href="#">Settings 1</a>
                                <a class="dropdown-item" href="#">Settings 2</a>
                            </div>
                        </li>
                        <li>
                            <a class="close-link"><i class="fa fa-close"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    @using (Html.BeginForm("Edit", "Perfil", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.HiddenFor(m => m.id)

                        <span class="section">
                            informacion Personal
                            @Html.ValidationSummary("", new { @class = "text-danger" })
                            <p class="text-danger">@ViewBag.Error</p>
                        </span>
                        <div class="field item form-group">
                            <label class="col-form-label col-md-3 col-sm-3  label-align">Nombre<span class="required">*</span></label>
                            <div class="col-md-6 col-sm-6">
                                @Html.TextBoxFor(m => m.nombre, new { @class = "form-control", placeholder = "Nombre" })
                            </div>
                        </div>
                        <div class="field item form-group">
                            <label class="col-form-label col-md-3 col-sm-3  label-align">Apellido<span class="required">*</span></label>
                            <div class="col-md-6 col-sm-6">
                                @Html.TextBoxFor(m => m.apelllido, new { @class = "form-control", placeholder = "Apellido" })
                            </div>
                        </div>
                        <div class="field item form-group">
                            <label class="col-form-label col-md-3 col-sm-3  label-align">Correo<span class="required">*</span></label>
                            <div class="col-md-6 col-sm-6">
                                @Html.TextBoxFor(m => m.correo, new { @class = "form-control", placeholder = "Correo", type = "email" })
                            </div>
                        </div>
                        <div class="field item form-group">
                            <label class="col-form-label col-md-3 col-sm-3  label-align">Telefono <span class="required">*</span></label>
                            <div class="col-md-6 col-sm-6">
                                @Html.TextBoxFor(m => m.telefono, new { @class = "form-control", placeholder = "Telefono", type = "number" })
                            </div>
                        </div>
                        <div class="field item form-group">
                            <label class="col-form-label col-md-3 col-sm-3  label-align">Direccion<span class="required">*</span></label>
                            <div class="col-md-6 col-sm-6">
                                @Html.TextBoxFor(m => m.direccion, new { @class = "form-control", placeholder = "Dirección" })
                            </div>
                        </div>
                        <div class="field item form-group">
                            <label class="col-form-label col-md-3 col-sm-3  label-align">Usuario<span class="required">*</span></label>
                            <div class="col-md-6 col-sm-6">
                                @Html.TextBoxFor(m => m.usuario1, new { @class = "form-control", placeholder = "Usuario" })
                            </div>
                        </div>
                        
                        <div class="field item form-group">
                            <label class="col-form-label col-md-3 col-sm-3  label-align">Cambiar Contraseña</label>
                            <div class="col-md-6 col-sm-6">
                                <input onclick="document.location.href = '@Url.Content("~/Persona/ContraseñaStartRecovery")'" type="button" class="btn btn-success" value="cambiar Contraseña" />
                            </div>
                        </div>

                        <div class="field item form-group">
                            <label class="col-form-label col-md-3 col-sm-3  label-align">Foto</label>
                            <div class="col-md-6 col-sm-6">

                                @*@Html.EditorFor(m => m.image, new { @class = "form-control", placeholder = "imagen" })*@
                                <img width="100" src="@Url.Action("GetImage","Perfil",new {id=Model.id })">
                                <input type="file" name="imagenCarga" />
                            </div>
                        </div>
                        <div class="ln_solid">
                            <div class="form-group">
                                <div class="col-md-6 offset-md-3">
                                    <button type='submit' class="btn btn-primary">Aceptar</button>
                                    <button type='reset' class="btn btn-success">Resetear</button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>




<script>

    // on form "reset" event
    document.forms[0].onreset = function (e) {
        validator.reset();
    };



</script>